
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name, role: "form")) do |f| %>
                <fieldset>
                    <div class="form-group">
                        <%= f.email_field :username, autofocus: true, class: "form-control", placeholder:"E-mail",type:"username", autofocus: "autofocus"%>
                    </div>
                    <div class="form-group">
                        <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password", type:"password" %>
                    </div>
                      <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
                </fieldset>
                <%= render "devise/shared/links" %>
            <%end%>
        </div>
      </div>
    </div>
  </div>
</div>


